<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switcher1">


        <Switch
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="New Switch"
            android:id="@+id/switch1"
            android:layout_weight="1"
            android:checked="false"
            android:clickable="true"
            android:onClick="onClickFragmentHDorWide1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hdWideContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_below="@+id/switcher1">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/genres_container"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/hdWideContainer"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="1">



    </LinearLayout>

    <LinearLayout
        android:id="@+id/support_container"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/genres_container"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Before"
        android:id="@+id/textView"
        android:layout_below="@+id/support_container"
        android:layout_alignRight="@+id/support_container"
        android:layout_alignEnd="@+id/support_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
