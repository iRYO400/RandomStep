<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:parallax="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/advanced_info"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/btch"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="0dp">

        <com.nvanbenschoten.motion.ParallaxImageView
            android:id="@+id/parallaxExtended"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            parallax:motionTiltSensitivity="1.8"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imgSmallSecond"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_below="@+id/imgSmallSecond"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:id="@+id/textCategoty" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categoryInfo"
            android:layout_below="@+id/textCategoty"
            android:textColor="#FFC1C1C1"
            android:gravity="center"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:layout_below="@+id/categoryInfo"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:id="@+id/textTags" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTags"
            android:textColor="#FFC1C1C1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/tagsInfo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagsInfo"
            android:text="Weight"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:id="@+id/weightText"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weightText"
            android:textColor="#FFC1C1C1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/weightInfo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgInfo"
            android:text="@string/wallRes"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_below="@+id/weightInfo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgResInfo"
            android:textColor="#FFC1C1C1"
            android:layout_below="@+id/imgInfo"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deviceInfo"
            android:textColor="#FFFFFF"
            android:text="@string/deviceRes"
            android:gravity="center"
            android:layout_below="@+id/imgResInfo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_below="@+id/deviceInfo"
            android:gravity="center"
            android:id="@+id/linearLayout5">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/devWidthInfo"
                android:textColor="#FFC1C1C1"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/devHeightInfo"
                android:textColor="#FFC1C1C1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout5"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_guillotine"
                android:textColor="@color/text_hover"
                android:id="@+id/cropMode"
                android:text="Open Crop Mode"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_guillotine"
                android:textColor="@color/text_hover"
                android:id="@+id/setWall"
                android:text="Set as Wallpaper" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
