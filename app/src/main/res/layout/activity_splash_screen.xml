<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:parallax="http://schemas.android.com/apk/res-auto"
    tools:context="com.r400.ultra.free.rwallpapers.activity.SplashScreen">

    <com.nvanbenschoten.motion.ParallaxImageView
        android:id="@+id/parallaxSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        parallax:motionTiltSensitivity="2.0"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_settings"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/splashText"
        android:id="@+id/splashTextView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/progressBar"
        android:layout_below="@+id/splashTextView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
