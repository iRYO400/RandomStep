<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background_dark"
    android:orientation="vertical">
    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_actionbar_background_view_height"
        android:background="@color/guillotine_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:contentInsetStart="0dp"
            style="@style/Toolbar">

            <ImageView
                android:id="@+id/help_tips_magic"
                android:layout_height="64px"
                android:layout_width="64px"
                android:layout_margin="4dp"/>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/btnHD"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_marginTop="@dimen/guillotine_medium_margin"
            android:weightSum="1"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/puzzle_yellow"
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="4dp" />

                    <Button
                        android:id="@+id/HDButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/DialogResTitle"
                        android:textSize="20sp"
                        android:allowUndo="false"
                        android:background="@drawable/ripple_setting"
                        android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGenre"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_marginTop="@dimen/guillotine_medium_margin"
            android:weightSum="1"
            android:layout_height="wrap_content">

            <ImageView

                android:src="@drawable/card_random_yellow"
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="4dp" />

                    <Button
                        android:id="@+id/GENRESHD"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/choose_genres"
                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_setting"
                        android:layout_margin="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textTip"
            android:layout_gravity="bottom|center_horizontal"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/Charge"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/RELOAD"
                        android:id="@+id/btnCharge"
                        android:onClick="onClick"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textColor="#424242"
                        android:background="@drawable/ripple_reload"
                        android:layout_margin="5dp" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_bg"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/frame_bg">

                    <ImageView
                        android:src="@drawable/shotgun_rounds_yellow"
                        android:layout_height="64dp"
                        android:layout_width="64dp"
                        android:layout_margin="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="5"
                        android:id="@+id/txtCharge"
                        android:textSize="40dp"
                        android:layout_margin="7dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="8dp" />

                </LinearLayout>

            </FrameLayout>


        </LinearLayout>



    </LinearLayout>
</FrameLayout>
