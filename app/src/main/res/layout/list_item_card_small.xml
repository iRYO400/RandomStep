<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewItem"
    android:orientation="horizontal"
    android:layout_margin="7dp"
    card_view:cardBackgroundColor="@color/myTransparent"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:alpha="1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/logoContainer"
                android:layout_marginLeft="20dp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/btch"
                    android:id="@+id/logoContainer"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="131dp"
                android:layout_marginLeft="20dp"
                android:layout_height="2dp"
                android:background="@drawable/line_separator_main"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdd"
                    android:textColor="@color/secondaryText"
                    android:text="@string/addToPool"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/chkSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.8"
                    android:scaleY="1.8"
                    android:alpha="1"
                    android:layout_gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp" />
        </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="3dp"
                android:layout_height="1dp"
                android:background="@drawable/line_separator_secondary"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

